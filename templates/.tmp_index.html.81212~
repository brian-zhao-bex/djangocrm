<html>
<head>
    <title>DJANGO CRM</title>
    <link rel="STYLESHEET" type="text/css" href="{{ STATIC_URL }}dhtmlx_std_full/dhtmlx.css">
    <script src="{{ STATIC_URL }}dhtmlx_std_full/dhtmlx.js" type="text/javascript"></script>
    <style>
		html, body {
			width: 100%;
			height: 100%;
			margin: 0px;
			overflow: hidden;
		}
    </style>
	 
	<script>
		dhtmlxEvent(window,"load",function(){
		  	dhxLayout = new dhtmlXLayoutObject(document.body,"2U");
		  	dhxLayout.cells("a").setText("Menu");
			dhxLayout.cells("a").setWidth(200);
			
			dhxLayout.cells("b").setText("");
			
			var dhxTree = dhxLayout.cells("a").attachTree();
			dhxTree.loadJSON("{{ STATIC_URL }}dhtmlx_std_full/tree.json", function(){});
			dhxTree.setSkin('bluefolders');
			dhxTree.setImagePath('{{ STATIC_URL }}dhtmlx_std_full/imgs/csh_bluefolders/');
			dhxTree.attachEvent("onClick",function(id){
				dhxLayout.cells("b").setText("Header");
				if (id == 1){
					dhxTree.getUserData(id, '/contacts');
					dhxLayout.cells("b").setText("Contacts");
					toolbar1 = dhxLayout.cells("b").attachToolbar();
					dhxLayout.cells("b").attachCell()
				}
	            
	            return true;
	        });
			
			
		});
		
    </script>
</head>
